extends layoutForAuthenticatedPages 

block content

    div
        div(class="d-flex align-items-center")
            div(class="rounded-circle d-flex" style=("width: 5rem; height: 5rem; padding: 1rem;" + "background-color:" + otherUser.iconColor + ";"))
                p(class="m-auto h1") #{otherUser.iconCharacters}
            h1(class="mb-0 ms-2") #{otherUser.username}
            div 
                i(class=("ms-4 h1 bi bi-person-fill-" + (otherUser.isAdmin ? "gear" : otherUser.isTrusted ? "check" : "exclamation")))
        p(class="text-warning mt-1") #[em #{otherUser.isAdmin ? "Admin" : otherUser.isTrusted ? "Trusted User" : "Untrusted User"}]
        p(class="mt-3") Joined #{otherUser.join_date_formatted}.
        hr
        p #{otherUser.description}
